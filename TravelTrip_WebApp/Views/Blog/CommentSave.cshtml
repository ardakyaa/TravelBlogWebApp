

<div class="content-form">
    <h3>Yorum Yapınız...</h3>
    <form method="post">
        <input type="hidden" placeholder="Id" name="BlogId" value="@ViewBag.value" readonly="readonly" required />
        <input type="text" placeholder="Kullanıcı Adı" name="UserName" required />
        <input type="text" placeholder="Mail Adresi" name="Email" required />
        <textarea placeholder="Yorum" name="UserComment" required></textarea>
        <input type="submit" value="GÖNDER" />
    </form>
</div>
