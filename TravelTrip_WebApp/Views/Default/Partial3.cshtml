@using TravelTrip_WebApp.Models.Entities
@model List<Blog>

<div class="padding">
    <h4>En Popüler 5 Blog</h4>
    <ul class="list list-pad">
        @{ int i = 0;}

        @foreach (var item in Model)
        {
            if (i < 5)
            {
                <li class="list-bg"><span>@{i++;}@i.</span><a href="/Blog/BlogDetail/@item.Id">@item.Header</a></li>
            }

        }

    </ul>
    <a href="/Blog/Index/" class="link1">Tüm Blogları Gör</a>
</div>

