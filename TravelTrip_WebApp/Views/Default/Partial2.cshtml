@using TravelTrip_WebApp.Models.Entities
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:275px; height:160px" />
        </div>
        <div class="left-text">

            <h4>@item.Header</h4>
            <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
            <p>@item.BlogContent.Substring(0,165)...</p>
            <p><a href="/Blog/BlogDetail/@item.Id"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}
