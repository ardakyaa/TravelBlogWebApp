@using TravelTrip_WebApp.Models.Entities
@model Blog
@{
    ViewBag.Title = "NewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(t0 => t0.Header)
    @Html.TextBoxFor(t0 => t0.Header, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.Date)
    @Html.TextBoxFor(t0 => t0.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.BlogImage)
    @Html.TextBoxFor(t0 => t0.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.BlogContent)
    @Html.TextAreaFor(t0 => t0.BlogContent, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Ekle</button>
</form>
