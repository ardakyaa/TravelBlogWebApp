@using TravelTrip_WebApp.Models.Entities
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.UserComment</td>
            <td>@item.Blog.Header</td>
            <td><a href="/Admin/DeleteComment/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/GetComment/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>

    }

</table>